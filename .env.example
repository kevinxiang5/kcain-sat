# Database
# SQLite (easiest for local dev - no setup required):
# DATABASE_URL="file:./dev.db"
# PostgreSQL (for production):
# DATABASE_URL="postgresql://user:password@localhost:5432/sat_learning?schema=public"
DATABASE_URL="file:./dev.db"

# NextAuth
NEXTAUTH_SECRET="generate-a-random-secret-with-openssl-rand-base64-32"
NEXTAUTH_URL="http://localhost:3000"

# Email (Resend) - for verification
# Sign up at resend.com, get API key
RESEND_API_KEY="re_xxxx"
EMAIL_FROM="Kcain <noreply@yourdomain.com>"

# Optional: OAuth providers
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=
# GITHUB_ID=
# GITHUB_SECRET=

# Firebase (see FIREBASE_SETUP.md)
# From Firebase Console → Project settings → Your apps (web)
# NEXT_PUBLIC_FIREBASE_API_KEY=
# NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
# NEXT_PUBLIC_FIREBASE_PROJECT_ID=
# NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=
# NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
# NEXT_PUBLIC_FIREBASE_APP_ID=
# Optional: for seed script / server Firestore (path to service account JSON)
# FIREBASE_SERVICE_ACCOUNT_PATH=
